BootStrap: docker
From: ubuntu:latest

%environment
    PATH=/app/uproc/scripts:/app/uproc/bin:$PATH

%runscript
    exec /app/uproc/bin/uproc-dna "$@"

%post
    apt-get update
    apt-get install -y locales git build-essential wget zlib1g-dev 
    locale-gen en_US.UTF-8

    #
    # Put everything into $APP_DIR
    #
    export APP_DIR=/app
    mkdir -p $APP_DIR
    cd $APP_DIR
    BIN_DIR=/app/uproc/bin
    mkdir -p "$BIN_DIR"

    #
    # Mash binary
    #
    mkdir /app/src/
    cd /app/src
    wget -O uproc.tgz http://uproc.gobics.de/downloads/uproc/uproc-1.2.0.tar.gz
    tar xvf uproc.tgz
    cd uproc-1.2.0
    ./configure --prefix /app/uproc # --disable-mmap 
    make install

    #
    # Mount points for TACC directories
    #
    mkdir /home1
    mkdir /scratch
    mkdir /work
